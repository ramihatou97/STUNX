# KOO Platform Single-User Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Single User Configuration
ADMIN_NAME=Your Name
ADMIN_EMAIL=your-email@example.com
ADMIN_API_KEY=your-personal-api-key-change-this

# Database Configuration
DATABASE_URL=postgresql://koo_user:your_secure_postgres_password@localhost:5432/koo_platform
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Configuration
REDIS_URL=redis://:your_secure_redis_password@localhost:6379/0
REDIS_PASSWORD=your_secure_redis_password

# AI API Keys (Essential for research features)
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
PUBMED_API_KEY=your_pubmed_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Hybrid AI Configuration
# Access methods: api, web, hybrid
GEMINI_ACCESS_METHOD=hybrid
CLAUDE_ACCESS_METHOD=hybrid
PERPLEXITY_ACCESS_METHOD=api

# Web Interface Settings
GEMINI_WEB_ENABLED=true
CLAUDE_WEB_ENABLED=true
PERPLEXITY_WEB_ENABLED=true

# Cost Management (USD per day)
GEMINI_DAILY_BUDGET=15.00
CLAUDE_DAILY_BUDGET=20.00
PERPLEXITY_DAILY_BUDGET=10.00

# Browser Automation Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_USER_DATA_DIR=./data/browser_sessions

# Simple Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
UPLOAD_MAX_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,png,jpg,jpeg

# Monitoring (Optional)
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here
GRAFANA_PASSWORD=secure_grafana_admin_password

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ADMIN_NAME=Your Name
REACT_APP_ADMIN_EMAIL=your-email@example.com
REACT_APP_API_KEY=your-personal-api-key-change-this

# Production Settings (for deployment)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
DOMAIN=localhost

# CI/CD (Optional)
KUBE_CONFIG=base64_encoded_kubeconfig
SLACK_WEBHOOK=your_slack_webhook_url_for_notifications